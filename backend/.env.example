# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Authentication
# Local password authentication
AUTH_PASSWORD=your_secure_password_here

# JWT secret for token signing (CHANGE IN PRODUCTION!)
JWT_SECRET=change-this-in-production-use-random-string

# Keycloak OIDC (optional, only required if using Keycloak authentication)
AUTH_KEYCLOAK_URL=http://keycloak:8080
AUTH_KEYCLOAK_REALM=your-realm
AUTH_KEYCLOAK_CLIENT_ID=rpg-music
AUTH_KEYCLOAK_CLIENT_SECRET=your-client-secret
AUTH_KEYCLOAK_REDIRECT_URI=http://localhost:5173/callback

# Paths
MUSIC_DIR=/music
DATABASE_PATH=./data/rpg-music.db

# Audio Settings
DEFAULT_BITRATE=256
MAX_DRIFT_SECONDS=10
POSITION_CHECK_INTERVAL=10000

# WebSocket Settings
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=60000

# Scanning
SCAN_ON_STARTUP=true
WATCH_FILE_CHANGES=false

# Logging
LOG_LEVEL=info

# External Links
# URL for "Add Music" button (opens in new tab)
# Example: https://youtube.com or https://spotify.com
ADD_MUSIC_URL=

# Text to display in the "Add Music" dialog
# This message will be shown when the user clicks the "Add Music" button
ADD_MUSIC_TEXT=Click "Continue" to open the music source in a new tab.
